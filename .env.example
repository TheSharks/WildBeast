# This is an example .env file for WildBeast
# This lists all possible configuration values and, if applicable, the default setting
# Non-essential configuration variables are commented out

## ESSENTIAL CONFIGURATION ##

BOT_TOKEN=discord_bot_token
BOT_PREFIX=++
WILDBEAST_MASTERS=discord_user_id_1|discord_user_id_2|etc
LAVA_NODES=[{"host":"lavalink","port":80,"region":"us","password":"password"}]

## OPTIONAL CONFIGURATION ##

#### WildBeast internals
# WILDBEAST_LANGUAGE=en
# WILDBEAST_SUPPRESS_COMMANDLOG=0
# WILDBEAST_PREFERRED_DATABASE=arangodb
# WILDBEAST_PREFERRED_ENCODER=lavalink
# WILDBEAST_VOICE_PERSIST=0
# WILDBEAST_DISABLE_MUSIC=0

#### API keys
# IMGFLIP_USERNAME=username
# IMGFLIP_PASSWORD=password
# IMGUR_KEY=imgur_api_key
# TWITCH_ID=twitch_client_id

#### ArangoDB
ARANGO_URI=http://arango:8529
# ARANGO_USERNAME=root
# ARANGO_PASSWORD=supersecret
# ARANGO_DATABASE=wildbeast

## INTERNAL CONFIGURATION ##

# Do not modify the values below unless you know what you're doing.

#### Bezerk
# BEZERK_URI=ws://localhost:1337
# BEZERK_PASSWORD=supersecret

#### Elasticsearch
# ELASTICSEARCH_URI=http://localhost:9200
# ELASTICSEARCH_INDEX=wildbeast

#### Sentry & debug
# SENTRY_DSN=https://sentry.io
# NODE_ENV=production

#### Rancher
# RANCHER_AUTOSCALE=0
