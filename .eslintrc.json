{
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "node": true,
    "es6": true
  },
  "globals": {
    "Promise": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-multi-spaces": [
      "error"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "indent": [
      "warn",
      2
    ],
    "no-console": [
      "off"
    ],
    "linebreak-style": [
      "error",
      "windows"
    ],
    "quotes": [
      "off"
    ],
    "semi": [
      "error",
      "never"
    ]
  }
}
